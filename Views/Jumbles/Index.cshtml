@model IEnumerable<SymJumbles.Models.Jumble>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MessageIn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MessageOut)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberTo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberFrom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TimeStamp)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MessageIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MessageOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeStamp)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
